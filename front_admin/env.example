# ===========================================
# Configuración del Frontend Administrativo
# App Registro Fotos
# ===========================================

# ===========================================
# Configuración de API
# ===========================================

# URL base de la API del backend
VITE_API_URL=http://localhost:3000/api

# URL del servidor WebSocket para comunicación en tiempo real
VITE_WS_URL=http://localhost:3000

# ===========================================
# Configuración de la Aplicación
# ===========================================

# Nombre de la aplicación
VITE_APP_NAME=Panel de Administración

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Modo de depuración (true/false)
VITE_DEBUG=false

# ===========================================
# Configuración de Mapas
# ===========================================

# Latitud del centro del mapa por defecto (Buenos Aires, Argentina)
VITE_MAP_CENTER_LAT=-34.6037

# Longitud del centro del mapa por defecto (Buenos Aires, Argentina)
VITE_MAP_CENTER_LNG=-58.3816

# Nivel de zoom inicial del mapa
VITE_MAP_ZOOM=10

# URL del tile server de OpenStreetMap
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Atribución del mapa
VITE_MAP_ATTRIBUTION=© OpenStreetMap contributors

# ===========================================
# Configuración de Autenticación
# ===========================================

# Tiempo de expiración del token JWT (en segundos)
VITE_JWT_EXPIRES_IN=86400

# Clave para encriptación local (opcional)
VITE_ENCRYPTION_KEY=your-secret-encryption-key

# ===========================================
# Configuración de WebSockets
# ===========================================

# Intervalo de reconexión en milisegundos
VITE_WS_RECONNECT_INTERVAL=5000

# Tiempo máximo de espera para conexión
VITE_WS_TIMEOUT=10000

# ===========================================
# Configuración de UI/UX
# ===========================================

# Tema por defecto (light/dark/auto)
VITE_DEFAULT_THEME=light

# Idioma por defecto (es/en)
VITE_DEFAULT_LOCALE=es

# Zona horaria por defecto
VITE_DEFAULT_TIMEZONE=America/Argentina/Buenos_Aires

# ===========================================
# Configuración de Rendimiento
# ===========================================

# Tamaño máximo de archivos (en bytes)
VITE_MAX_FILE_SIZE=10485760

# Intervalo de actualización de ubicaciones (en milisegundos)
VITE_LOCATION_UPDATE_INTERVAL=30000

# Tiempo de caché para datos (en segundos)
VITE_CACHE_DURATION=300

# ===========================================
# Configuración de Notificaciones
# ===========================================

# Duración de notificaciones toast (en milisegundos)
VITE_TOAST_DURATION=5000

# Posición de notificaciones (top-right, top-left, bottom-right, bottom-left)
VITE_TOAST_POSITION=top-right

# ===========================================
# Configuración de Desarrollo
# ===========================================

# Puerto del servidor de desarrollo
VITE_DEV_PORT=3000

# Host del servidor de desarrollo
VITE_DEV_HOST=localhost

# ===========================================
# Configuración de Producción
# ===========================================

# URL base en producción
# VITE_PRODUCTION_URL=https://tu-dominio.com

# Configuración de analytics (opcional)
# VITE_ANALYTICS_ID=your-analytics-id

# ===========================================
# Configuración de Seguridad
# ===========================================

# Headers de seguridad adicionales
VITE_SECURITY_HEADERS=true

# Configuración de CORS
VITE_CORS_ENABLED=true

# ===========================================
# Configuración de Logs
# ===========================================

# Nivel de logging (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Habilitar logs en consola
VITE_CONSOLE_LOGS=true

# ===========================================
# Configuración de Testing
# ===========================================

# URL de la API para testing
# VITE_TEST_API_URL=http://localhost:3001/api

# Modo de testing
VITE_TEST_MODE=false 